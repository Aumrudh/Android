<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:text="Ticket Booking"
        android:textColor="@color/black"
        android:textSize="30dp" />

    <Spinner
        android:id="@+id/src"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="80dp"
        android:textColor="@color/black" />


    <TextView
        android:layout_width="183dp"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="80dp"
        android:text="Source"
        android:textSize="25dp" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="46dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="150dp"
        android:text="Destination"
        android:textSize="25dp" />

    <Spinner
        android:id="@+id/dst"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="150dp"
        android:textColor="@color/black" />


    <TextView
        android:layout_width="181dp"
        android:layout_height="46dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="220dp"
        android:text="Date"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/Date"
        android:layout_width="169dp"
        android:layout_height="47dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="220dp"
        android:hint="Select Date"
        android:textSize="25dp" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="46dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="280dp"
        android:text="Trains"
        android:textSize="25dp" />

    <Spinner
        android:id="@+id/train"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="280dp"
        android:textColor="@color/black" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="363dp"
        android:layout_height="148dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="360dp">


        <RadioButton
            android:id="@+id/ub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:checked="true"
            android:text="Upper Berth"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/lb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:checked="false"
            android:text=" Lower Berth"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/sub"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190sp"
            android:layout_marginTop="-115sp"
            android:checked="false"
            android:text="Side Upper"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/slb"
            android:layout_width="164dp"
            android:layout_height="58dp"
            android:layout_marginLeft="190sp"
            android:layout_marginTop="20sp"
            android:checked="false"
            android:text="Side Lower"
            android:textSize="20dp" />
    </RadioGroup>

    <Button
        android:id="@+id/sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150sp"
        android:layout_marginTop="600sp"
        android:text="Send SMS" />
</RelativeLayout>