<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employee Database"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginLeft="70sp"
    />

    <Button
        android:id="@+id/insert"
        android:layout_width="295dp"
        android:layout_height="71dp"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="65sp"
        android:onClick="insertEmployee"
        android:text="Insert"
        android:textSize="40sp" />

    <Button
        android:id="@+id/delete"
        android:layout_width="295dp"
        android:layout_height="71dp"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="155sp"
        android:onClick="deleteEmployee"
        android:text="Delete"
        android:textSize="40sp" />
    <Button
        android:id="@+id/update"
        android:layout_width="295dp"
        android:layout_height="71dp"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="240sp"
        android:text="Update"
        android:textSize="40sp"
        android:onClick="updateEmployee"/>

    <Button
        android:id="@+id/viewDB"
        android:layout_width="295dp"
        android:layout_height="71dp"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="320sp"
        android:text="View"
        android:textSize="40sp"
        android:onClick="viewEmployee"/>
</RelativeLayout>